<%= form_tag '/login', {:class => 'form-signin'} do %>
	<h2 class="form-signin-heading">Please sign in</h2>
	<%= label_tag(:email, "E-Mail", class: "sr-only") %><br>
    <%= email_field_tag :email, "", class: "form-control", placeholder: "Email address" %>
    <%= label_tag(:password, "Password", class: "sr-only") %><br>
    <%= password_field_tag :password, "", class: "form-control", placeholder: "Password" %>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

<% end %>
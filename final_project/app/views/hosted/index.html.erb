<p id="notice"><%= notice %></p>

<h1>Listing Questionnaires</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questionnaires.each do |questionnaire| %>
      <tr>
        <td><%= questionnaire.user_id %></td>
        <td><%= questionnaire.subject_id %></td>
        <td><%= link_to 'Show', hosted_path(questionnaire) %></td>
        <td><%= link_to 'Destroy', hosted_path(questionnaire), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

